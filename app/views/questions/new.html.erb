
<h1>Создание вопроса</h1>

<form action="/tests/<%= params[:test_id] %>/questions" method="post">
  <input type="hidden" value="<%= form_authenticity_token %>">

  <p>
    <label id="question-body">Текст вопроса:</label>
    <input type="text" name="question[body]" id="question-body" />
  </p>

  <p>
    <input type="submit" value="Создать вопрос" />
  </p>
</form> 
